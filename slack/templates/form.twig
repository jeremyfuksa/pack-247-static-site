{% extends "layout.twig" %}
{% block content %}

  <div class="row">
    <div class="col-md-3">
      <img class="img-responsive" src="{{ logo_url }}">
    </div>
    <div class="col-md-9">
      <h2>Join the
        {{ team_name }}
        Slack team</h2>
      <p>Pack 247 uses Slack to plan all Pack events. All Pack families are encouraged to join the Pack's Slack team so that we can build a great program together.</p>
    </div>
  </div>

  <form class="form-signin" action="{{ path_for('submit') }}" method="post">
    <input type="hidden" name="csrf_name" value="{{ csrf_name }}">
    <input type="hidden" name="csrf_value" value="{{ csrf_value }}">
    <div class="row">
      <div class="form-group col-md-4">
        <input type="text" class="form-control" placeholder="First Name" required name="first_name" value="{{ first_name }}">
        <span style="color:red;">{{ error_list.first_name }}</span>
      </div>
      <div class="form-group col-md-4">
        <input type="text" class="form-control" placeholder="Last Name" required name="last_name" value="{{ last_name }}">
        <span style="color:red;">{{ error_list.last_name }}</span>
      </div>
      <div class="form-group col-md-4">
        <input type="email" class="form-control" placeholder="Email Address" required autofocus name="email" value="{{ email }}">
        <span style="color:red;">{{ error_list.email }}</span>
      </div>
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Request Invitation</button>
  </form>

  <hr>
  <div class="row">
    <div class="col-md-2">
      <img class="img-responsive" src="./slack-logo.png">
    </div>
    <div class="col-md-10">
      <p><a href="https://slack.com/downloads" target="_blank">To easily access the Pack 247 Slack team, install Slack on your computer, tablet or smartphone.</a></p>
    </div>
  </div>

{% endblock %}
